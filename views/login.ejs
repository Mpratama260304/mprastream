<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - StreamFlow</title>
  <link rel="icon" href="/images/logo.svg" type="image/svg+xml">
  <link rel="preload" href="/images/logo.svg" as="image" type="image/svg+xml">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/js/tailwind-config.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.30.0/tabler-icons.min.css">
  <link rel="stylesheet" href="/css/theme.css">
  <link rel="stylesheet" href="/css/styles.css">
  <% if (typeof recaptchaSiteKey !== 'undefined' && recaptchaSiteKey) { %>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <% } %>
</head>
<body class="sf-bg text-white font-inter">
  <div class="min-h-screen flex items-center justify-center px-6">
    <div class="w-full max-w-md sf-card p-8">
      
      <div class="flex justify-center mb-8">
        <img src="/images/logo_mobile.svg" alt="StreamFlow Logo" class="h-10">
      </div>
      
      <% if (error) { %>
        <div id="error-message" class="sf-alert sf-alert-error mb-6">
          <div class="flex items-center">
            <i class="ti ti-alert-circle mr-2"></i>
            <span><%= error %></span>
          </div>
        </div>
      <% } %>
          
      <form action="/login" method="post" class="space-y-5">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div>
          <label for="username" class="text-sm font-medium block mb-2 text-gray-200">Username</label>
          <div class="relative">
            <input type="text" id="username" name="username"
              class="sf-input"
              placeholder="Enter your username" required>
            <i class="ti ti-user absolute left-3 top-1/2 -translate-y-1/2 text-purple-400/70"></i>
          </div>
        </div>
        <div class="pb-3">
          <label for="password" class="text-sm font-medium block mb-2 text-gray-200">Password</label>
          <div class="relative">
            <input type="password" id="password" name="password"
              class="sf-input pr-12"
              placeholder="Enter your password" required>
            <i class="ti ti-lock absolute left-3 top-1/2 -translate-y-1/2 text-purple-400/70"></i>
            <button type="button" id="passwordToggleBtn"
              class="absolute right-3 top-1/2 -translate-y-1/2 flex items-center justify-center text-gray-400 hover:text-purple-300 transition-colors">
              <i class="ti ti-eye text-base" id="passwordToggle"></i>
            </button>
          </div>
        </div>
        
        <% if (typeof recaptchaSiteKey !== 'undefined' && recaptchaSiteKey) { %>
        <div class="flex justify-left" style="margin-top: 7px !important;">
          <div class="g-recaptcha" data-sitekey="<%= recaptchaSiteKey %>" data-theme="dark"></div>
        </div>
        <% } %>
        
        <button type="submit" class="sf-btn-primary w-full py-2.5">
          Log In
        </button>
      </form>

      <div class="text-center mt-6">
        <p class="text-gray-400 text-sm">
          Don't have an account? 
          <a href="/signup" class="text-purple-400 hover:text-purple-300 transition-colors">Sign up</a>
        </p>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const icons = document.querySelectorAll('.ti');
      icons.forEach(icon => {
        icon.classList.add('font-loaded');
      });

      // Password visibility toggle handler
      document.getElementById('passwordToggleBtn').addEventListener('click', function() {
        const password = document.getElementById('password');
        const passwordToggle = document.getElementById('passwordToggle');
        if (password.type === 'password') {
          password.type = 'text';
          passwordToggle.classList.remove('ti-eye');
          passwordToggle.classList.add('ti-eye-off');
        } else {
          password.type = 'password';
          passwordToggle.classList.remove('ti-eye-off');
          passwordToggle.classList.add('ti-eye');
        }
      });
    });
  </script>
</body>
</html>